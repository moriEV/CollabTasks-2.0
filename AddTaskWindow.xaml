<Window x:Class="CollabTasks_2._0.AddTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CollabTasks_2._0"
        mc:Ignorable="d"
        Title="Создание задачи" Height="334" Width="408"
        ResizeMode="NoResize">
    <Grid>

        <Button Content="Добавить задание" HorizontalAlignment="Left" Margin="10,252,0,0" VerticalAlignment="Top" Width="379" Height="33" Click="Button_Click"/>
        <TextBox x:Name="TaskDescriptionTextBox" HorizontalAlignment="Left" Margin="10,38,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="379" Height="78"/>
        <DatePicker x:Name="DeadlineDatePicker" HorizontalAlignment="Left" Margin="10,216,0,0" VerticalAlignment="Top" Width="379" Height="31"/>
        <ComboBox x:Name="AssigneesComboBox" HorizontalAlignment="Left" Margin="10,152,0,0" VerticalAlignment="Top" Width="379" Height="28"/>
        <Label Content="Суть задания" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label Content="Испольнители" HorizontalAlignment="Left" Margin="10,121,0,0" VerticalAlignment="Top"/>
        <Label Content="Дедлайн" HorizontalAlignment="Left" Margin="17,185,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
