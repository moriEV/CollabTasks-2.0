<Window x:Class="CollabTasks_2._0.CreateGroupDialogxaml"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CollabTasks_2._0"
        mc:Ignorable="d"
        Title="Создание группы" Height="107" Width="350" ResizeMode="NoResize">
    <Grid>
        <Label Content="Название группы" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="groupNameTextBox" HorizontalAlignment="Left" Margin="120,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="197" Height="26" Background="#F5F5F5" BorderBrush="#1565C0"/>
        <Button x:Name="OkButton" Content="Создать" HorizontalAlignment="Left" Margin="270,41,0,0" VerticalAlignment="Top" Click="OkButton_Click" Background="#E0E0E0" BorderBrush="#1565C0" Foreground="#333333"/>
        <Button x:Name="CancelButton" Content="Отмена" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top" Click="CancelButton_Click" Background="#E0E0E0" BorderBrush="#1565C0" Foreground="#333333"/>

    </Grid>
</Window>
