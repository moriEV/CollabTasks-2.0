<Window x:Class="CollabTasks_2._0.UserDetails"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CollabTasks_2._0"
        mc:Ignorable="d"
        Title="Информация о пользователе" Height="182" Width="205" ResizeMode="NoResize">
    <Grid>
        <TextBlock x:Name="txtId" HorizontalAlignment="Center" Margin="0,17,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="185"/>
        <TextBlock x:Name="txtName" HorizontalAlignment="Center" Margin="0,38,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="185"/>
        <TextBlock x:Name="txtEmail" HorizontalAlignment="Center" Margin="0,59,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="185"/>
        <Button x:Name="btnSave" Content="Save" HorizontalAlignment="Left" Margin="10,115,0,0" VerticalAlignment="Top" Width="60" Click="btnSave_Click" Background="#E0E0E0" BorderBrush="#1565C0" Foreground="#333333"/>
        <CheckBox x:Name="chkAdmin" Content="Admin" HorizontalAlignment="Left" Margin="10,80,0,0" VerticalAlignment="Top" Width="59"/>
        <CheckBox x:Name="chkBan" Content="Ban" HorizontalAlignment="Left" Margin="10,95,0,0" VerticalAlignment="Top" Width="58"/>

    </Grid>
</Window>
